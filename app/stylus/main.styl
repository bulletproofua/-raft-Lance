.editions{
    width: 290px;
    margin: 0 auto;
    margin-bottom: 50px;
}

.editions div{
    
    position: relative;
    border: 1px solid rgba(191, 191, 191, 0.4);
    display: inline-block;
    padding: 5px;
    cursor: pointer;
}

.editions div:first-child{
    border-radius 15px 0 0 15px
    border-right: none;
    padding-right:25px;
}

.editions div:last-child{
    border-radius 0px 15px 15px 0px
    border-left: none;
    padding-left:15px;
}

.editions div:first-child:after{
    content: 'OR';
    width: 25px;
    height: 25px;
    position: absolute;
    font-size: 80%;
    right: -12px;
    bottom: 2px;
    background-color: #4ca368;
    color: #ffffff;
    border-radius: 50%;
    text-align: center;
    line-height: 200%;
    z-index: 99;
}
.edition-selected{
    color: #ffffff !important;
    background-color: #5db442 !important;
}
